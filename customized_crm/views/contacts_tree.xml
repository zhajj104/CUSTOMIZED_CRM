<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="contacts_tree" model="ir.ui.view">
            <field name="name">联系人</field>
            <field name="model">crm.contacts</field>
            <field name="arch" type="xml">
                <tree limit="20" default_order="last_modified_time desc">
                    <field name="name" string="姓名"/>
                    <field name="customer_name_id" string="客户名称"/>
                    <field name="sex" string="性别"/>
                    <field name="age" string="年龄"/>
                    <field name="department" string="部门"/>
                    <field name="position" string="职务"/>
                    <field name="phone" string="手机"/>
                    <field name="telephone" string="电话"/>
                    <field name="mail" string="邮箱"/>
                </tree>
            </field>
        </record>

        <record id="contacts_search" model="ir.ui.view">
            <field name="name">联系人</field>
            <field name="model">crm.contacts</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="姓名"/>
                    <field name="customer_name_id" string="客户名称"/>
                    <field name="sex" string="性别"/>
                    <field name="age" string="年龄"/>
                    <field name="department" string="部门"/>
                    <field name="position" string="职务"/>
                    <field name="phone" string="手机"/>
                    <field name="telephone" string="电话"/>
                    <field name="mail" string="邮箱"/>
                </search>
            </field>
        </record>
    </data>
</odoo>